<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.pharmacymanagementsystem.controller.DashBoardController"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
    <children>
        <BorderPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <left>
                <VBox prefWidth="200.0" minWidth="150.0" maxWidth="250.0"
                      spacing="10.0" style="-fx-background-color: #f5f5f5;"
                      BorderPane.alignment="CENTER">
                    <padding>
                        <Insets top="20.0" bottom="20.0" left="10.0" right="10.0"/>
                    </padding>
                    <children>
                        <Label text="DashBoard" style="-fx-text-fill: #333333;">
                            <font>
                                <Font name="System Bold" size="21.0" />
                            </font>
                            <VBox.margin>
                                <Insets left="10.0" bottom="30.0" />
                            </VBox.margin>
                        </Label>

                        <Button fx:id="orderBtn" mnemonicParsing="false"
                                onAction="#orderOnAction"
                                maxWidth="Infinity" prefHeight="50.0"
                                text="Order"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;">
                            <font>
                                <Font size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Button>

                        <Button fx:id="employee_btn" mnemonicParsing="false"
                                onAction="#employeeOnAction"
                                maxWidth="Infinity" prefHeight="50.0"
                                text="Employee"
                                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5;">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>

                        <Button fx:id="medicine_btn" mnemonicParsing="false"
                                onAction="#medicineOnAction"
                                maxWidth="Infinity" prefHeight="50.0"
                                text="Medicine"
                                style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 5;">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>
            </left>

            <center>
                <AnchorPane style="-fx-background-color: #ffffff;"
                            BorderPane.alignment="CENTER">
                    <!-- Content area will resize automatically -->
                    <padding>
                        <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
                    </padding>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>