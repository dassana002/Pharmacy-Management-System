<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="846.0" prefWidth="1220.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.pharmacymanagementsystem.controller.DashBoardController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <left>
                <VBox maxWidth="250.0" minWidth="150.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #f5f5f5;" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                    </padding>
                    <children>
                        <Label style="-fx-text-fill: #333333;" text="DashBoard">
                            <font>
                                <Font name="System Bold" size="21.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="30.0" left="10.0" />
                            </VBox.margin>
                        </Label>

                        <Button fx:id="orderBtn" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleOrderPage" prefHeight="50.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Order">
                            <font>
                                <Font size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Button>

                        <Button fx:id="employee_btn" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleEmployeePage" prefHeight="50.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5;" text="Employee">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>

                        <Button fx:id="medicine_btn" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleItemPage" prefHeight="50.0" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 5;" text="Medicine">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>
            </left>

            <center>
                <AnchorPane fx:id="mainContent" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
