                    <children>
                        <Label style="-fx-text-fill: #333333;" text="Order">
                            <font>
                                <Font name="System Bold" size="21.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="30.0" left="10.0" />
                            </VBox.margin>
                        </Label>

                        <Button maxWidth="Infinity" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="List">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>

                        <Button maxWidth="Infinity" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5;" text="Add">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>

                        <Button maxWidth="Infinity" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 5;" text="Pay">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>

                        <Button maxWidth="Infinity" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-background-radius: 5;" text="Credit">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>

                        <Button maxWidth="Infinity" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: #00BCD4; -fx-text-fill: white; -fx-background-radius: 5;" text="Hold">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>

                        <Button maxWidth="Infinity" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: #3F51B5; -fx-text-fill: white; -fx-background-radius: 5;" text="Search Bill">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>

                        <Button maxWidth="Infinity" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-background-radius: 5;" text="Print">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>

                        <CheckBox mnemonicParsing="false" text="Auto Print">
                            <VBox.margin>
                                <Insets left="15.0" top="20.0" />
                            </VBox.margin>
                        </CheckBox>

                        <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#backToDashBoard" prefHeight="45.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 5;" text="â† Back">
