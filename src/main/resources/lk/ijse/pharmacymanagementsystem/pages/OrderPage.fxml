                <SplitPane dividerPositions="0.38" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" BorderPane.alignment="CENTER">
                    <items>
                        <!-- Form Section -->
                        <ScrollPane fitToHeight="true" fitToWidth="true">
                            <content>
                                <VBox minWidth="300" spacing="15.0">
                                    <padding>
                                        <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
                                    </padding>
                                    <children>
                                        <GridPane hgap="10.0" vgap="15.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="130" />
                                                <ColumnConstraints hgrow="ALWAYS" minWidth="150" prefWidth="200" />
                                            </columnConstraints>

                                            <!-- QTY Available -->
                                            <Label text="Date" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                                <font><Font size="16.0" /></font>
                                            </Label>
                                            <TextField maxWidth="Infinity" prefHeight="40.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                            <!-- Description 1 -->
                                            <Label text="Invoice No" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                                <font><Font size="16.0" /></font>
                                            </Label>
                                            <TextField maxWidth="Infinity" prefHeight="40.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                            <!-- Item -->
                                            <Label text="Item" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                                <font><Font size="16.0" /></font>
                                            </Label>
                                            <TextField maxWidth="Infinity" prefHeight="40.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                            <!-- Description 2 -->
                                            <Label text="Description" GridPane.columnIndex="0" GridPane.rowIndex="3">
                                                <font><Font size="16.0" /></font>
                                            </Label>
                                            <TextField maxWidth="Infinity" prefHeight="100.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                            <!-- Unit Price -->
                                            <Label text="Unit Price" GridPane.columnIndex="0" GridPane.rowIndex="4">
                                                <font><Font size="16.0" /></font>
                                            </Label>
                                            <TextField maxWidth="Infinity" prefHeight="40.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                            <!-- Quantity -->
                                            <Label text="Quantity" GridPane.columnIndex="0" GridPane.rowIndex="5">
                                                <font><Font size="16.0" /></font>
                                            </Label>
                                            <TextField maxWidth="Infinity" prefHeight="40.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                                            <!-- Discount -->
                                            <Label text="Discount" GridPane.columnIndex="0" GridPane.rowIndex="6">
                                                <font><Font size="16.0" /></font>
                                            </Label>
                                            <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
                                                <children>
                                                    <ComboBox maxWidth="Infinity" prefHeight="40.0" promptText="0" HBox.hgrow="ALWAYS" />
                                                    <TextField maxWidth="Infinity" prefHeight="40.0" promptText="0" HBox.hgrow="ALWAYS" />
                                                </children>
                                            </HBox>

                                            <!-- Qty Available 2 -->
                                            <Label text="Qty Available" GridPane.columnIndex="0" GridPane.rowIndex="7">
                                                <font><Font size="16.0" /></font>
                                            </Label>
                                            <TextField maxWidth="Infinity" prefHeight="40.0" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                                            <!-- Qty Total -->
                                            <Label text="Qty Total" GridPane.columnIndex="0" GridPane.rowIndex="8">
                                                <font><Font size="16.0" /></font>
                                            </Label>
                                            <TextField maxWidth="Infinity" prefHeight="40.0" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                                            <!-- Rack No -->
                                            <Label text="Rack No" GridPane.columnIndex="0" GridPane.rowIndex="9">
                                                <font><Font size="16.0" /></font>
                                            </Label>
                                            <TextField maxWidth="Infinity" prefHeight="40.0" GridPane.columnIndex="1" GridPane.rowIndex="9" />
                                 <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                 </rowConstraints>
                                        </GridPane>

                                        <!-- Total Field -->
                                        <TextField alignment="CENTER" maxWidth="Infinity" prefHeight="50.0" promptText="0.00">
                                            <VBox.margin>
                                                <Insets top="20.0" />
                                            </VBox.margin>
                                            <font>
                                                <Font size="18.0" />
                                            </font>
                                        </TextField>
                                    </children>
                                </VBox>
                            </content>
                        </ScrollPane>
<!--                        Table Section -->
                        <AnchorPane minWidth="400" />
                    </items>
                </SplitPane>
            </center>
