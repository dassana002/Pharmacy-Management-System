<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="mainContent" alignment="CENTER" style="-fx-background-color: rgba(0,0,0,0.5);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.pharmacymanagementsystem.controller.components.product.dialog.SupplierAddController">

    <VBox fx:id="popupCard" alignment="TOP_CENTER" maxHeight="750" maxWidth="700" minHeight="550" minWidth="450" prefHeight="620" prefWidth="550" style="             -fx-background-color: white;             -fx-background-radius: 18;             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 5);           ">

        <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
        </padding>

        <children>
            <!-- Title -->
            <Label prefHeight="62.0" prefWidth="135.0" style="-fx-text-fill: #333333; -fx-font-weight: bold;" text="Add Supplier">
                <font>
                    <Font size="22.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="25.0" />
                </VBox.margin>
            </Label>

            <!-- Form Fields in ScrollPane -->
            <ScrollPane fitToWidth="true" prefHeight="383.0" prefWidth="500.0" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                <content>
                    <GridPane hgap="15.0" vgap="18.0">
                        <padding>
                            <Insets right="10.0" />
                        </padding>

                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="130" prefWidth="150" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="250" prefWidth="330" />
                        </columnConstraints>

                        <!-- Company Name -->
                        <Label style="-fx-text-fill: #333333;" text="Company Name" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <font><Font size="15.0" /></font>
                        </Label>
                        <TextField fx:id="companyName_text" maxWidth="Infinity" prefHeight="40.0" promptText="Enter company name" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <!-- Address -->
                        <Label style="-fx-text-fill: #333333;" text="Address" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.valignment="TOP">
                            <font><Font size="15.0" /></font>
                            <GridPane.margin>
                                <Insets top="8.0" />
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="address_text" maxWidth="Infinity" prefHeight="80.0" promptText="Enter company address" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <!-- Company Contact -->
                        <Label style="-fx-text-fill: #333333;" text="Company Contact" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <font><Font size="15.0" /></font>
                        </Label>
                        <TextField fx:id="CompanyContact_txt" maxWidth="Infinity" prefHeight="40.0" promptText="Enter contact number" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <!-- Company Email -->
                        <Label style="-fx-text-fill: #333333;" text="Company Email" GridPane.columnIndex="0" GridPane.rowIndex="3">
                            <font><Font size="15.0" /></font>
                        </Label>
                        <TextField fx:id="CompanyEmail_txt" maxWidth="Infinity" prefHeight="40.0" promptText="Enter email address" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <!-- Supplier Name -->
                        <Label style="-fx-text-fill: #333333;" text="Supplier Name" GridPane.columnIndex="0" GridPane.rowIndex="4">
                            <font><Font size="15.0" /></font>
                        </Label>
                        <TextField fx:id="SupplierName_txt" maxWidth="Infinity" prefHeight="40.0" promptText="Enter supplier name" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <!-- Supplier Contact -->
                        <Label style="-fx-text-fill: #333333;" text="Supplier Contact" GridPane.columnIndex="0" GridPane.rowIndex="5">
                            <font><Font size="15.0" /></font>
                        </Label>
                        <TextField fx:id="SupplierContact_txt" maxWidth="Infinity" prefHeight="40.0" promptText="Enter supplier contact" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>
                </content>
            </ScrollPane>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" prefHeight="99.0" prefWidth="500.0" spacing="15.0">
                <VBox.margin>
                    <Insets top="25.0" />
                </VBox.margin>
                <children>
                    <Button fx:id="save_btn" onAction="#handleSaveSupplier" prefHeight="45.0" prefWidth="160.0" style="                                 -fx-background-color: #4CAF50;                                 -fx-text-fill: white;                                 -fx-background-radius: 8;                                 -fx-font-weight: bold;                                 -fx-cursor: hand;                             " text="Save">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Button>

                    <Button fx:id="close_btn" onAction="#handleClose" prefHeight="45.0" prefWidth="160.0" style="                                 -fx-background-color: #e0e0e0;                                 -fx-text-fill: #333333;                                 -fx-background-radius: 8;                                 -fx-font-weight: bold;                                 -fx-cursor: hand;                             " text="Close">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Button>
                </children>
            </HBox>

        </children>
    </VBox>

</StackPane>
