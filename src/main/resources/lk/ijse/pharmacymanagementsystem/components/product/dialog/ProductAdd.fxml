<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="mainContent" alignment="CENTER"
           style="-fx-background-color: rgba(0,0,0,0.5);"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="lk.ijse.pharmacymanagementsystem.controller.components.product.dialog.ProductAddController">

    <VBox fx:id="popupCard"
          alignment="CENTER"
          prefWidth="480"
          prefHeight="520"
          minWidth="400"
          minHeight="450"
          maxWidth="600"
          maxHeight="650"
          style="
            -fx-background-color: white;
            -fx-background-radius: 18;
            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 5);
          ">

        <padding>
            <Insets top="25.0" bottom="25.0" left="20.0" right="20.0" />
        </padding>

        <children>
            <!-- Title -->
            <Label text="Add Item"
                   style="-fx-text-fill: #333333; -fx-font-weight: bold;">
                <font>
                    <Font size="22.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="25.0" />
                </VBox.margin>
            </Label>

            <!-- Form Fields -->
            <GridPane hgap="10.0" vgap="15.0" maxWidth="450">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="280" />
                </columnConstraints>

                <!-- Item Code -->
                <Label text="Item Code" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font><Font size="16.0" /></font>
                </Label>
                <TextField fx:id="itemCode_text"
                           maxWidth="Infinity"
                           onKeyPressed="#handleFindItem"
                           prefHeight="40.0"
                           promptText="Enter item code"
                           style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;"
                           GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <!-- Description -->
                <Label text="Description"
                       GridPane.columnIndex="0" GridPane.rowIndex="1"
                       GridPane.valignment="TOP">
                    <font><Font size="16.0" /></font>
                    <GridPane.margin>
                        <Insets top="5.0" />
                    </GridPane.margin>
                </Label>
                <TextField fx:id="des_text"
                           maxWidth="Infinity"
                           prefHeight="100.0"
                           promptText="Enter description"
                           style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;"
                           GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- Dosage -->
                <Label fx:id="dosageID"
                       text="Dosage"
                       GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <font><Font size="16.0" /></font>
                </Label>
                <ComboBox fx:id="dosage_cmb"
                          editable="true"
                          maxWidth="Infinity"
                          prefHeight="40.0"
                          promptText="Select or enter dosage"
                          style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;"
                          GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </GridPane>

            <!-- Action Buttons -->
            <VBox alignment="CENTER" spacing="12.0">
                <VBox.margin>
                    <Insets top="30.0" />
                </VBox.margin>
                <children>
                    <Button fx:id="save_btn"
                            text="Save"
                            onAction="#handleSaveItem"
                            maxWidth="300.0"
                            minWidth="200.0"
                            prefHeight="45.0"
                            style="
                                -fx-background-color: #4CAF50;
                                -fx-text-fill: white;
                                -fx-background-radius: 8;
                                -fx-font-weight: bold;
                                -fx-cursor: hand;
                            ">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Button>

                    <Button fx:id="close_btn"
                            text="Close"
                            onAction="#handleClose"
                            maxWidth="300.0"
                            minWidth="200.0"
                            prefHeight="45.0"
                            style="
                                -fx-background-color: #e0e0e0;
                                -fx-text-fill: #333333;
                                -fx-background-radius: 8;
                                -fx-font-weight: bold;
                                -fx-cursor: hand;
                            ">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Button>
                </children>
            </VBox>

        </children>
    </VBox>

</StackPane>