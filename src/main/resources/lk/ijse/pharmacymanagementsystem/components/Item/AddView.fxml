<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.pharmacymanagementsystem.controller.components.item.AddViewController">

    <SplitPane dividerPositions="0.38" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
            <!-- Form Section -->
            <ScrollPane fitToHeight="true" fitToWidth="true">
                <content>
                    <VBox minWidth="300" spacing="0.0">
                        <children>
                            <GridPane hgap="10.0" vgap="15.0">
                                <padding>
                                    <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
                                </padding>

                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120" />
                                    <ColumnConstraints hgrow="ALWAYS" minWidth="150" prefWidth="200" />
                                </columnConstraints>

                                <!-- Invoice No -->
                                <Label text="Invoice No" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <font><Font size="16.0" /></font>
                                </Label>
                                <TextField fx:id="invoice_number_text" maxWidth="Infinity" prefHeight="40.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <!-- Date -->
                                <Label text="Date" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                    <font><Font size="16.0" /></font>
                                </Label>
                                <DatePicker fx:id="todayDate_text" maxWidth="Infinity" prefHeight="40.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

<!--                                &lt;!&ndash; Received Date &ndash;&gt;-->
<!--                                <Label text="Received Date" GridPane.columnIndex="0" GridPane.rowIndex="2">-->
<!--                                    <font><Font size="16.0" /></font>-->
<!--                                </Label>-->
<!--                                <DatePicker fx:id="ReceivedDate_text" maxWidth="Infinity" prefHeight="40.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />-->

                                <!-- Due Date -->
                                <Label text="Received Date" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                    <font><Font size="16.0" /></font>
                                </Label>
                                <DatePicker fx:id="receivedDate_text" maxWidth="Infinity" prefHeight="40.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <!-- Company Name -->
                                <Label text="Company Name" GridPane.columnIndex="0" GridPane.rowIndex="3">
                                    <font><Font size="16.0" /></font>
                                </Label>
                                <TextField fx:id="companyName_text" maxWidth="Infinity" prefHeight="40.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <!-- Item Code -->
                                <Label text="Item Code" GridPane.columnIndex="0" GridPane.rowIndex="4">
                                    <font><Font size="16.0" /></font>
                                </Label>
                                <TextField fx:id="itemCode_text" maxWidth="Infinity" onKeyPressed="#handleFindItem" prefHeight="40.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                <!-- Description -->
                                <Label text="Description" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.valignment="TOP">
                                    <font><Font size="16.0" /></font>
                                    <GridPane.margin>
                                        <Insets top="5.0" />
                                    </GridPane.margin>
                                </Label>
                                <TextField fx:id="des_text" maxWidth="Infinity" prefHeight="100.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                                <!-- Dosage -->
                                <Label text="Dosage" GridPane.columnIndex="0" GridPane.rowIndex="6">
                                    <font><Font size="16.0" /></font>
                                </Label>
                                <TextField fx:id="dosage_txt" maxWidth="Infinity" prefHeight="40.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                                <!-- Unit Cost -->
                                <Label text="Unit Cost" GridPane.columnIndex="0" GridPane.rowIndex="7">
                                    <font><Font size="16.0" /></font>
                                </Label>
                                <TextField fx:id="unitCost_txt" maxWidth="Infinity" prefHeight="40.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                                <!-- Sell Price -->
                                <Label text="Sell Price" GridPane.columnIndex="0" GridPane.rowIndex="8">
                                    <font><Font size="16.0" /></font>
                                </Label>
                                <TextField fx:id="sellPrice_txt" maxWidth="Infinity" prefHeight="40.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                                <!-- Qty -->
                                <Label text="Qty" GridPane.columnIndex="0" GridPane.rowIndex="9">
                                    <font><Font size="16.0" /></font>
                                </Label>
                                <TextField fx:id="qty_txt" maxWidth="Infinity" prefHeight="40.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="9" />

<!--                                &lt;!&ndash; Available Qty &ndash;&gt;-->
<!--                                <Label text="Available Qty" GridPane.columnIndex="0" GridPane.rowIndex="10">-->
<!--                                    <font><Font size="16.0" /></font>-->
<!--                                </Label>-->
<!--                                <TextField fx:id="availableQty_txt" maxWidth="Infinity" prefHeight="40.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="10" />-->

                                <!-- Free Qty -->
                                <Label text="Free Qty" GridPane.columnIndex="0" GridPane.rowIndex="10">
                                    <font><Font size="16.0" /></font>
                                </Label>
                                <TextField fx:id="freeQty_txt" maxWidth="Infinity" prefHeight="40.0" promptText="0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="10" />

                                <!-- Batch No -->
                                <Label text="Batch No" GridPane.columnIndex="0" GridPane.rowIndex="11">
                                    <font><Font size="16.0" /></font>
                                </Label>
                                <TextField fx:id="batchNo_txt" maxWidth="Infinity" prefHeight="40.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="11" />

                                <!-- Expire Date -->
                                <Label text="Expire Date" GridPane.columnIndex="0" GridPane.rowIndex="12">
                                    <font><Font size="16.0" /></font>
                                </Label>
                                <DatePicker fx:id="expireDate_text" maxWidth="Infinity" prefHeight="40.0" GridPane.columnIndex="1" GridPane.rowIndex="12" />
                        <rowConstraints>
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                        </rowConstraints>
                            </GridPane>
                        </children>
                    </VBox>
                </content>
            </ScrollPane>

            <!-- Table and Actions Section -->
            <VBox minWidth="400" prefHeight="830.0" prefWidth="525.0" spacing="15.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <children>
                    <!-- Table -->
                    <TableView fx:id="itemAddView_tbl" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colNo" minWidth="40" prefWidth="50" text="NO" />
                            <TableColumn fx:id="colDesc" minWidth="150" prefWidth="200" text="Description" />
                            <TableColumn fx:id="colCost" minWidth="80" prefWidth="100" text="Unit_Cost" />
                            <TableColumn fx:id="colSellPrice" minWidth="80" prefWidth="100" text="Sell_Price" />
                            <TableColumn fx:id="colQty" minWidth="50" prefWidth="60" text="QTY" />
                            <TableColumn fx:id="colSubTotal" minWidth="100" prefWidth="126" text="Sub_Total" />
                        </columns>
                    </TableView>

                    <!-- Total and Actions -->
                    <VBox spacing="15.0">
                        <children>
                            <!-- Total Field -->
                            <TextField fx:id="Alltotal_btn" alignment="CENTER" editable="false" maxWidth="Infinity" prefHeight="55.0" promptText="Total: 0.00" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-background-color: #f5f5f5; -fx-border-color: #cccccc; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5;">
                                <VBox.margin>
                                    <Insets left="20.0" right="20.0" />
                                </VBox.margin>
                            </TextField>

                            <!-- Action Buttons -->
                            <HBox alignment="CENTER" spacing="15.0">
                                <children>
                                    <Button fx:id="addToCart_btn" mnemonicParsing="false" onAction="#handleAddToCart" prefHeight="45.0" prefWidth="140.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-font-size: 14px;" text="Add To Cart">
                                    </Button>

                                    <Button fx:id="closeBill_btn" mnemonicParsing="false" onAction="#handleCloseBIll" prefHeight="45.0" prefWidth="140.0" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-font-size: 14px;" text="Close Bill">
                                    </Button>

                                    <Button fx:id="hold_btn" mnemonicParsing="false" onAction="#handleHoldLIst" prefHeight="45.0" prefWidth="140.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold; -fx-font-size: 14px;" text="Hold">
                                    </Button>
                                </children>
                            </HBox>
                        </children>
                    </VBox>
               <HBox fx:id="holdList_bar" prefHeight="54.0" prefWidth="612.0" />
                </children>
            </VBox>
        </items>
    </SplitPane>
</AnchorPane>
