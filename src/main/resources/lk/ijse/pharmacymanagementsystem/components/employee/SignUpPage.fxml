<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.pharmacymanagementsystem.controller.SignUpController"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
            style="-fx-background-color: #f5f5f5;">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0"
              AnchorPane.topAnchor="40.0" AnchorPane.bottomAnchor="40.0"
              AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0">
            <children>
                <!-- Title -->
                <Label text="Sign Up" textAlignment="CENTER"
                       style="-fx-text-fill: #333333;">
                    <font>
                        <Font name="System Bold" size="43.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </Label>

                <!-- Form Container -->
                <VBox spacing="15.0" maxWidth="600.0" alignment="CENTER">
                    <padding>
                        <Insets top="20.0" bottom="20.0" left="30.0" right="30.0"/>
                    </padding>

                    <!-- Employee ID -->
                    <TextField fx:id="employeeID_Col" promptText="Employee ID"
                               prefHeight="45.0" maxWidth="Infinity"
                               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc;">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </TextField>

                    <!-- Name -->
                    <TextField fx:id="name_Col" promptText="Name"
                               prefHeight="45.0" maxWidth="Infinity"
                               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc;">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </TextField>

                    <!-- Username -->
                    <TextField fx:id="userName_Col" promptText="User Name"
                               prefHeight="45.0" maxWidth="Infinity"
                               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc;">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </TextField>

                    <!-- Password -->
                    <TextField fx:id="password_Col" promptText="Password"
                               prefHeight="45.0" maxWidth="Infinity"
                               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc;">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </TextField>

                    <!-- Role Combo Box -->
                    <ComboBox fx:id="comboBOX" promptText="Role"
                              prefHeight="45.0" maxWidth="Infinity"
                              style="-fx-background-radius: 5;">
                        <VBox.margin>
                            <Insets bottom="10.0" />
                        </VBox.margin>
                    </ComboBox>

                    <!-- Buttons -->
                    <HBox spacing="20.0" alignment="CENTER">
                        <VBox.margin>
                            <Insets top="20.0" />
                        </VBox.margin>
                        <children>
                            <Button fx:id="submit_btn" text="Submit"
                                    mnemonicParsing="false" onAction="#saveEmployee"
                                    prefHeight="45.0" prefWidth="120.0"
                                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 16;">
                            </Button>

                            <Button fx:id="login_btn" text="Log In"
                                    mnemonicParsing="false" onAction="#BackToLoginPage"
                                    prefHeight="45.0" prefWidth="120.0"
                                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 16;">
                            </Button>
                        </children>
                    </HBox>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>